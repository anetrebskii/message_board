.div(ng-controller="AdvertisementNewController")
  .header
    %h3.title
      = I18n.t('New advertisement')
    %p.announcement
      Please adds your advertisement

  .form
    - if @errors && @errors.any?
      .form_errors
        %div.errors_overview
          %span.title
            = "#{pluralize(@errors.count, "error")} prohibited this task from being saved:"
          %ul.items
            - @errors.full_messages.each do |msg|
              %li
                = msg

    = form_for @advertisement, html: { class: 'form_fields', name: 'myForm' } do |f|
      = f.fields_for :address do |ff|
        .row.field_group
          .column
            Address
          .column
            = ff.text_field :formatted_address, id: 'addresspicker', class: 'text_field'

      .row.field_group
        .column
          = f.label :title
        .column
          = f.text_field :title, 'ng-model': 'ad.title', class: 'text_field', required: '', maxlength: '{{title_max_number_letters}}', trim: ''
          .hint
            Max number words {{title_max_number_letters - ad.title.length}}

      .row.field_group
        .column
          = f.label :description
        .column
          = f.text_area :description, rows: 10, 'ng-model': 'ad.description', required: '', trim: ''
      .row.field_group
        .column
          = f.label :price
        .column.small-2
          = f.number_field :price, value: 0, 'ng-model': 'ad.price', class: 'text_field--number', min: 1, required: ''
        .column.small-10.post_inform
          â‚½

      .row.field_group.form_buttons
        .column
          = f.submit I18n.t("send"), class: 'button'
